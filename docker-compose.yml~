version: "3.4"

services:
  mongodb:
    image: mongo:3.4-jessie
    ports:
      - "27017"
    networks:
      - dbnet
    volumes:
      - dbdata:/data/db
    command: mongod --dbpath /data/db --logpath /data/db/log --noauth
    
  appdock:
    build: ./Dockerfiles/appdock/
    ports:
      - "80:80"
    volumes:
      - ./appcode/C3STEM/Middleware/static/TrafficSim.html:/opt/C3STEM/Middleware/static/TrafficSim.html
    networks:
      - dbnet
    depends_on:
      - mongodb
    links:
      - mongodb
    environment:
      - MONGO_URI=mongodb://mongodb:27017
    tty: true
    command: /bin/bash -c "./dbinit.sh && /bin/bash"
    
networks:
  dbnet:

volumes:
  dbdata:
